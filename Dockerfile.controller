FROM alpine:3.22

LABEL org.opencontainers.image.source=https://github.com/Martina-CTF/Ahaz

# Install docker and uv
COPY --from=ghcr.io/astral-sh/uv:0.8.15 /uv /uvx /bin/

# Install kubectl
RUN apk add --no-cache curl && \
  curl -LO https://storage.googleapis.com/kubernetes-release/release/$(curl -s https://storage.googleapis.com/kubernetes-release/release/stable.txt)/bin/linux/amd64/kubectl && \
  chmod +x ./kubectl && \
  mv ./kubectl /usr/local/bin

# Install Python and OpenVPN
RUN apk add --no-cache \
    openvpn \
    openssl \
    python3 \
    py3-pip

# Kube config should be mounted on image start
ENV KUBECONFIG=/.kube/config.yml

# Copy over project info to set up uv environment
WORKDIR /app
COPY ahaz_k8s_controller/pyproject.toml /app/ahaz_k8s_controller/pyproject.toml
COPY ahaz_common/pyproject.toml /app/ahaz_common/pyproject.toml
COPY pyproject.toml /app/pyproject.toml

# Make sure the environment has all the dependencies
RUN uv sync --all-packages

# Copy over the rest of the project files
COPY ahaz_k8s_controller /app/ahaz_k8s_controller/
COPY ahaz_common /app/ahaz_common/

# Get EasyRSA
RUN set -eux; \
  EASYRSA_TAG="v3.1.0"; \
  EASYRSA_NAME="EasyRSA-${EASYRSA_TAG#v}.tgz"; \
  URL="https://github.com/OpenVPN/easy-rsa/releases/download/${EASYRSA_TAG}/${EASYRSA_NAME}"; \
  mkdir -p /app/ahaz_k8s_controller/k8s_controller/tools/EasyRSA-${EASYRSA_TAG#v}; \
  curl -fsSL "$URL" -o /tmp/$EASYRSA_NAME; \
  tar -xzf /tmp/$EASYRSA_NAME -C /app/ahaz_k8s_controller/k8s_controller/tools/EasyRSA-${EASYRSA_TAG#v} --strip-components=1; \
  rm /tmp/$EASYRSA_NAME; \
  ln -sf /app/ahaz_k8s_controller/k8s_controller/tools/EasyRSA-${EASYRSA_TAG#v}/easyrsa /usr/local/bin/easyrsa; \
  chmod +x /usr/local/bin/easyrsa

RUN uv sync --all-packages

# Run the server
CMD ["/bin/uv", "run", "/app/ahaz_k8s_controller/k8s_controller/server.py"]
